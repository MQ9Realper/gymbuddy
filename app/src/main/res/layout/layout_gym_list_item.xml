<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageGym"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:src="@drawable/gym"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:id="@+id/layoutGymDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/imageGym"
        android:layout_toRightOf="@+id/imageGym"
        android:orientation="vertical">

        <com.gymbuddy.gymbuddy.views.TxtSemiBold
            android:id="@+id/txtGymName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fitness First Gym"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/ratingGymRating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:backgroundTint="@color/colorAccent"
            android:numStars="5" />

        <com.gymbuddy.gymbuddy.views.TxtRegular
            android:id="@+id/txtGymLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Business Central Towers A Level 7"
            android:textColor="@color/colorBlackLight"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.gymbuddy.gymbuddy.views.TxtRegular
            android:id="@+id/txtGymTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opens at 09:00 AM"
            android:textColor="@color/colorBlackLight"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_below="@+id/layoutGymDetails"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorBlack" />

</RelativeLayout>